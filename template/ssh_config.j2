### by vmm-v3-script ###
Host *
    StrictHostKeyChecking no

host vmm 
    hostname {{vmm}}
    user {{ user }}
    
host gw
    {% if jumphost -%}
    ProxyCommand ssh -W {{ gw.ip }}:22 jumphost
    {% else -%}
    hostname {{gw.ip}}
    {% endif -%}
    user {{ gw.user }}
    IdentityFile ~/.ssh/{{ ssh_key_host }}
